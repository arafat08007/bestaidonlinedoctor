<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/elemmargin"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/expertOption"
            android:padding="@dimen/optioncard"
            android:layout_margin="@dimen/stdgap"
            android:drawableStart="@drawable/expertoption"
            android:text="Expert Option"
            android:drawableEnd="@drawable/icon_forward"
            android:background="@drawable/menu_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/onlineDoct"
            android:layout_margin="@dimen/stdgap"
            android:padding="@dimen/optioncard"
            android:drawableStart="@drawable/onlinedoctor"
            android:text="Online \n Doctor consultancy"
            android:drawableEnd="@drawable/icon_forward"
            android:background="@drawable/menu_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/OneClickDoctor"
            android:padding="@dimen/optioncard"
            android:text="1 Click doctor"
            android:layout_margin="@dimen/stdgap"
            android:drawableStart="@drawable/oneclickdoctor"
            android:drawableEnd="@drawable/icon_forward"
            android:background="@drawable/menu_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>




    <TextView
        android:visibility="gone"
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>