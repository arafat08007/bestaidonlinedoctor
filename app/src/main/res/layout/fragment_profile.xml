<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/elemmargin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.10">

        <ImageView
            android:id="@+id/userPic"
            android:layout_width="@dimen/userpicsize"
            android:layout_height="@dimen/userpicsize"
            android:padding="5dp"
            android:src="@drawable/engflag" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Tahmid Afsar Shopno"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/stdgap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/stdgap"
            android:weightSum="2">

            <TextView
                android:id="@+id/userDOB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/textgap"
                android:drawableStart="@drawable/dob"

                android:layout_weight="1"
                android:text="Birth Date" />

            <TextView
                android:id="@+id/userWT"
                android:layout_width="0dp"
                android:padding="@dimen/textgap"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/weightscale"

                android:layout_weight="1"
                android:text="Weight" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/stdgap"
            android:weightSum="2">

            <TextView
                android:id="@+id/userLOC"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/location"
                android:padding="@dimen/textgap"

                android:layout_weight="1"
                android:text="Location" />

            <TextView
                android:id="@+id/userHT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/heightscale"
android:padding="@dimen/textgap"
                android:layout_weight="1"
                android:text="Height" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorgray" />

        <TextView
            android:id="@+id/userPH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/phone"
            android:padding="@dimen/stdgap"
            android:text="8801717998754" />

        <TextView
            android:id="@+id/userEmail"
            android:drawableStart="@drawable/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/stdgap"
            android:text="someone@bestaid.com" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorgreen"
        android:orientation="vertical"
        android:padding="@dimen/stdgap"
        android:verticalScrollbarPosition="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.1"
        tools:layout_editor_absoluteX="0" >
        <TextView
            android:textColor="#FFF"
            android:text="Medical History"
            android:padding="@dimen/textgap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#FFF"
            android:padding="@dimen/textgap"
            android:text="@string/lorumipsum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>